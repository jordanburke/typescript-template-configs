{
  "name": "typescript-template-configs",
  "version": "2.0.0",
  "description": "Shared TypeScript configuration files for library templates. Provides standardized ESLint, Prettier, Vitest, TypeScript, and build configs.",
  "keywords": [
    "typescript",
    "template",
    "config",
    "eslint",
    "prettier",
    "vitest",
    "tsup",
    "shared-config"
  ],
  "author": "jordan.burke@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/jordanburke/typescript-template-configs",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanburke/typescript-template-configs"
  },
  "main": "./prettier-config.js",
  "exports": {
    ".": "./prettier-config.js",
    "./prettier": "./prettier-config.js",
    "./prettier-ignore": "./.prettierignore",
    "./eslint": "./eslint.config.base.mjs",
    "./vitest": "./dist/vitest.config.base.js",
    "./tsconfig": "./tsconfig.base.json",
    "./tsup": "./dist/tsup.config.base.js",
    "./scripts": "./package-scripts.json",
    "./package.json": "./package.json"
  },
  "files": [
    "prettier-config.js",
    ".prettierignore",
    "eslint.config.base.mjs",
    "dist",
    "tsconfig.base.json",
    "package-scripts.json",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "devDependencies": {
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "tsup": "^8.x"
  },
  "peerDependenciesMeta": {
    "tsup": {
      "optional": true
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "rimraf dist && tsup",
    "validate": "pnpm format && pnpm build",
    "prepublishOnly": "pnpm validate"
  },
  "packageManager": "pnpm@10.22.0+sha512.bf049efe995b28f527fd2b41ae0474ce29186f7edcb3bf545087bd61fbbebb2bf75362d1307fda09c2d288e1e499787ac12d4fcb617a974718a6051f2eee741c"
}
