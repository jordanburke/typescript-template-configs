{
  "name": "typescript-template-configs",
  "version": "3.3.10",
  "description": "Shared TypeScript configuration files for library templates. Provides standardized ESLint, Prettier, Vitest, TypeScript, and build configs.",
  "keywords": [
    "typescript",
    "template",
    "config",
    "eslint",
    "prettier",
    "vitest",
    "tsdown",
    "shared-config"
  ],
  "author": "jordan.burke@gmail.com",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/jordanburke/typescript-template-configs",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanburke/typescript-template-configs"
  },
  "main": "./prettier-config.js",
  "bin": {
    "typescript-template-configs": "./dist/cli.js"
  },
  "exports": {
    ".": "./prettier-config.js",
    "./prettier": "./prettier-config.js",
    "./prettier-ignore": "./.prettierignore",
    "./eslint": "./eslint.config.base.mjs",
    "./vitest": "./dist/vitest.config.base.js",
    "./tsconfig": "./tsconfig.base.json",
    "./tsdown": "./dist/tsdown.config.base.js",
    "./scripts": "./package-scripts.json",
    "./package.json": "./package.json"
  },
  "files": [
    "templates",
    "prettier-config.js",
    ".prettierignore",
    "eslint.config.base.mjs",
    "dist",
    "tsconfig.base.json",
    "package-scripts.json",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "devDependencies": {
    "tsdown": "^0.16.6"
  },
  "peerDependencies": {
    "tsdown": "^0.x"
  },
  "peerDependenciesMeta": {
    "tsdown": {
      "optional": true
    }
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "rimraf dist && tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate": "pnpm format && pnpm build && pnpm test",
    "prepublishOnly": "pnpm validate"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
